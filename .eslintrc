{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "node": true,
        "jest/globals": true
    },

    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "plugins": ["prettier", "jest"],
    "rules": {
        "prettier/prettier": ["error"],
        "import/no-extraneous-dependencies": "off",
        "no-console": [
            "error",
            {
                "allow": ["warn", "error"]
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "ignoreRestSiblings": true
            }
        ]
    }
}
